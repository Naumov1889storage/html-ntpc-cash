@import "common"

.order {
	display: flex
	align-items center
	padding: 62px 25px 62px 25px
	min-height: 555px
	background: url(/img/bg-order.jpg) center

	.container {
		padding: 0
		background: lightCol
	}
	&_title {
		font-size: 36px
		font-weight: 900
		line-height: 42px
		text-transform: uppercase
		.text-attentionCol {
			display: block
			margin-bottom: 15px
			font-size: 26px
			font-weight: 500
		}
	}

	&_form {
		padding: 40px 30px 40px 60px
		width: 62%
		form {
			width: 265px
			input, button {
				width: 100%
			}
			input {
				margin-bottom: 16px
			}
		}
	}

	&_call {
		display: flex
		justify-content center
		align-items flex-end
		padding-bottom: 35px

		width: 315px
		color: lightCol
		background: #fdc327 url(/img/order-call.jpg) no-repeat
		p, a {
			color: lightCol
		}
		p {
			font-size: 20px
			line-height: 30px
		}
		a {
			font-size: 24px
			font-weight: 900
			line-height: 34px
		}
	}
}

@media (max-width: 880px) {

	.order {
		&_title {
			font-size: 30px
			.text-attentionCol {
				font-size: 22px
			}
		}
		&_form {
			padding-left: 30px
		}
	}

}

@media (max-width: 750px) {

	.order {
		.flex_row__between {
			flex-direction: column
		}
		&_form {
			width: 100%
			form {
				width: 100%
			}
		}
		&_call {
			background-image: none
			width: 100%
			height: 170px
		}
	}

}