.sanction {
	margin: 40px 0 90px 0
	font-weight: 100
	text-align: center
	&_text1 {
		margin-bottom: 40px
		padding: 0 55px
		font-size: 18px
		line-height: 26px
	}
	&_text2 {
		b {
			position: relative
			padding-bottom: 35px
			font-size: 24px
			font-weight: 900
			text-transform: uppercase
			&:after {
				content: ''
				position: absolute
				left: 50%
				bottom: 15px
				margin-left: -43px
				width: 86px
				height: 1px
				background: #c4c4c2
			}
		}
		p {
			font-size: 24px
			line-height: 34px
			.text-attentionCol {
				font-weight: 600
			}
		}
	}
}

@media (max-width: 750px) {

	.sanction {
		.flex_row__around {
			flex-direction: column
			.flex_column {
				margin-bottom: 30px
			}
		}
	}

}