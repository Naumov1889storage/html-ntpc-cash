@import "common"

.option {
	.tab_title {
		justify-content: space-between
		overflow: hidden
	}
	.tab_title__item {
		position: relative
		padding: 10px 20px 20px 20px
		font-size: 16px
		font-weight: 300
		color: #807c7c
		&:before {
			content: ''
			position: absolute
			z-index: -1
			left: -100px
			bottom: 7px
			width: 500%
			height: 1px
			background: #c1c1c1
		}
		&:after {
			content: ''
			position: absolute

			left: 50%
			bottom: 0px
			margin-left: -5px
			width: 14px
			height: 14px
			background: url(/img/tab2.png) -1px no-repeat
		}
		&.active {
			font-weight: 500
			color: darkCol
			&:after {
				background-position: -16px
			}
		}
	}

	.tab_content__item {
		flex-wrap: wrap
		padding: 40px 0 40px 0
		.item {
			margin-top: 40px
			margin-bottom: 40px
			width: 270px
			h3 {
				position: relative
				margin-bottom: 17px
				font-size: 18px
				font-weight: 900
				line-height: 24px
				text-transform: uppercase
				.top {
					display: inline-block
					padding-top: 3px
					border-top: 3px solid #010101
				}
				.bottom {
					display: inline-block
					padding-bottom: 3px
					border-bottom: 3px solid #010101
				}
				&:after {
					content: ''
					position: absolute
					z-index: -1
					top: -25px
					left: 80px
					width: 120px
					height: 120px
					background: url(/img/iconset2.png) no-repeat
				}
			}
			p {
				font-size: 14px
				line-height: 20px
			}
			&:nth-child(1) {
				h3 {
					&:after {
						left: 140px
					}
				}
			}
			&:nth-child(2) {
				h3 {
					&:after {
						left: 110px
						background-position: -137px 0
					}
				}
			}
			&:nth-child(3) {
				h3 {
					&:after {
						left: 74px
						background-position: -258px 0
					}
				}
			}
			&:nth-child(4) {
				h3 {
					&:after {
						left: 100px
						background-position: 0 -113px
					}
				}
			}
			&:nth-child(5) {
				h3 {
					&:after {
						left: 53px
						background-position: -124px -113px
					}
				}
			}
			&:nth-child(6) {
				h3 {
					&:after {
						left: 53px
						background-position: -246px -113px
					}
				}
			}
		}
	}
}

@media (max-width: 980px) {

	.option {
		.tab_title {
			flex-wrap: wrap
		}
		.tab_content__item {
			.item {
				width: 30%
			}
		}
	}

}

@media (max-width: 880px) {

	.option {
		.tab_content__item {
			.item {
				width: 45%
			}
		}
	}

}

@media (max-width: 600px) {

	.option {
		.tab_content__item {
			.item {
				width: 100%
			}
		}
	}

}

@media (max-width: 500px) {

	.option {
		.tab_title {
			overflow: visible
		}
		.tab_title__item {
			width: 100%
			text-align: center
		}
	}

}