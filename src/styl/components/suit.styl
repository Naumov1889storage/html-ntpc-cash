.suit {
	background: url(/img/bg-suit.jpg) center bottom no-repeat

	h2 {
		margin-bottom: 60px
	}
	&_list {
		display: flex
		flex-direction: column
		li {
			display: flex
			flex-direction: column
			justify-content: center
			padding: 15px 0 15px 0
			width: 50%
			min-height: 185px
			h3 {
				margin-bottom: 10px
				font-size: 36px
				font-weight: 300
			}
			p {
				font-size: 20px
				font-weight: 300
				line-height: 30px
			}
			&:nth-child(1) {
				align-self: flex-end
			}
			&:nth-child(2) {
				align-self: flex-start
			}
			&:nth-child(3) {
				align-self: flex-end
			}
			&:nth-child(4) {
				align-self: flex-start
			}
		}
	}
}

@media (max-width: 880px) {

	.suit {
		&_list {
			li {
				width: 60%
			}
		}
	}

}

@media (max-width: 650px) {

	.suit {
		background: none
		.container {
			padding: 0
		}
		&_list {
			li {
				padding: 0 15px 0 15px
				width: 100%
				&:nth-child(1) {
					background: #d97d57
				}
				&:nth-child(2) {
					background: #ffc253
				}
				&:nth-child(3) {
					background: #cdf7f6
				}
				&:nth-child(4) {
					background: #a4bc4a
				}
			}
		}
	}

}