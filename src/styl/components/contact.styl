@import "common"

.contact {
	position: relative
	display: flex
	flex-direction: column

	min-height: 425px
	overflow: hidden
	h2 {
		position: relative
		z-index: 10
		left: 50%
		margin-left: -460px
		width: 920px
		&:before {
			content: ''
			position: absolute
			z-index: -1
			top: -340px
			left: -520px
			width: 1000px
			height: 400px
			background: lightCol
			box-shadow: 0 12px 13px 0 rgba(1, 1, 1, 0.08);
			transform: rotate(5deg)
		}
		&:after {
			content: ''
			position: absolute
			z-index: -1
			top: -340px
			right: -520px
			width: 1000px
			height: 400px
			background: lightCol
			box-shadow: 0 12px 13px 0 rgba(1, 1, 1, 0.08);
			transform: rotate(-5deg)
		}
	}
	&_list {
		position: absolute
		z-index: 7
		display: flex
		flex-direction: column
		align-self: flex-end
		padding: 165px 220px 0 55px
		width: 50%
		height: 100%
		&:before {
			content: ''
			position: absolute
			top: 0
			left: 0
			width: 100%
			height: 100%
			background: rgba(255, 255, 255, .7)
		}
		li {
			position: relative
			margin-bottom: 15px
			padding-left: 25px
			font-size: 20px
			font-weight: 300
			line-height: 26px
			&:before {
				content: ''
				position: absolute
				top: 3px
				left: 0
				width: 23px
				height: 23px
				background: url(/img/iconset.png) -64px -2px no-repeat
			}
			.contact_tel {
				font-weight: 600
			}
			&:nth-child(2) {
				&:before {
					background-position: -85px -2px
				}
			}
			&:nth-child(3) {
				&:before {
					top: 6px
					background-position: -111px -2px
				}
			}
			&:nth-child(4) {
				&:before {
					background-position: -134px -2px
				}
			}
		}
	}
	&_map {
		position: absolute
		width: 100%
	}
}

@media (max-width: 1200px) {

	.contact {
		&_list {
			padding-right: 40px
		}
	}

}

@media (max-width: 880px) {

	.contact {
		&_list {
			padding-right: 15px
		}
	}

}

@media (max-width: 780px) {

	.contact {
		min-height: 850px
		&_list {
			padding-left: 15px
			width: 100%
			height: 400px
			background: lightCol
		}
		&_map {
			top: 430px
		}
	}

}
