@import "common"

.step {
	padding: 35px 0 35px 0
	background: url(/img/bg-step.jpg) center
	-webkit-background-size: cover
	background-size: cover
	.tab_title {
		flex-wrap: wrap
	}
	.tab_title__item {
		display: flex
		flex-direction: column
		align-items: center
		margin: 2px
		width: 135px
		text-align: center
		opacity: .5
		.number {
			position: relative
			bottom: -10px
			padding-top: 18px
			width: 100%
			height: 80px
			font-family: secondFont
			font-size: 24px
			color: lightCol
			text-shadow: 2px 1px 2px rgba(150, 150, 150, 1);
			background: url(/img/tab1.png) -2px 0 no-repeat
		}
		.text {
			display: flex
			justify-content: center
			align-items: center
			padding: 15px 20px 15px 20px
			width: 100%
			min-height: 70px
			font-size: 15px
			font-weight: 300
			line-height: 22px
			background: lightCol
		}
		&.active {
			opacity: 1
			.text {
				font-weight: 500
			}
		}
	}

	.tab_content__item {
		margin-top: 40px
		.img-wrap {
			display: flex
			align-items: center
			justify-content center
			img {
				display: block
				margin-bottom: 30px

			}
		}
		.text {

		}
		h3 {
			margin: 5px 0 20px 0
			font-size: 24px
			font-weight: 900
		}
		p {
			margin-bottom: 30px
			font-size: 16px
			font-weight: 300
			line-height: 22px
		}
		&.flex_row__between {
			flex-wrap: wrap
			.img-wrap {
				width: 40%
			}
			.text {
				width: 57%
			}
		}
	}

}

@media (max-width: 880px) {

	.step {
		.tab_content__item{
			&.flex_row__between {
				.img-wrap {
					width: 100%
				}
				.text {
					width: 100%
				}
			}
		}
	}

}